<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_screen_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_screen_content"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/lg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Choose destination -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/md"
            android:layout_marginVertical="@dimen/lg"
            android:background="@drawable/choose_destination"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/flight_type_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/md"
                android:background="@drawable/btn_grey_f4"
                android:paddingHorizontal="10sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/xs">

                <TextView
                    android:id="@+id/one_way_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/md"
                    android:layout_weight="1"
                    android:background="@drawable/btn_primary"
                    android:gravity="center"
                    android:paddingVertical="24sp"
                    android:text="@string/home_one_way"
                    android:textAppearance="@style/MetaInfoBtnTextStyle" />

                <TextView
                    android:id="@+id/round_trip_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_primary"
                    android:gravity="center"
                    android:paddingVertical="24sp"
                    android:text="@string/home_round_trip"
                    android:textAppearance="@style/MetaInfoBtnTextStyle" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/md">

                <!-- Fillable section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/md"
                    android:orientation="vertical">

                    <!-- Information about the departure location-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_grey_f4"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="17sp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/md"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="16dp"
                                android:layout_marginTop="10sp"
                                android:src="@drawable/yellow_airplane_icon" />

                            <ImageView
                                android:id="@+id/yellow_airplane_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="25sp"
                                android:src="@drawable/yellow_gradient_rectange" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/xsText"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.2"
                                android:text="@string/home_from_label"
                                android:textAppearance="@style/MetaInfoBtnDarkTextStyle" />

                            <AutoCompleteTextView
                                android:id="@+id/flight_departure"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/home_from"
                                android:textAppearance="@style/CardTitleTextStyle"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Information about the arrival location-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xsText"
                        android:background="@drawable/btn_grey_f4"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="17sp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/md"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="17sp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="10sp"
                                android:src="@drawable/blue_airplane_icon" />

                            <ImageView
                                android:id="@+id/blue_airplane_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="25sp"
                                android:src="@drawable/blue_gradient_rectange" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/xsText"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.2"
                                android:text="@string/home_to_label"
                                android:textAppearance="@style/MetaInfoBtnDarkTextStyle" />

                            <AutoCompleteTextView
                                android:id="@+id/flight_destination"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/home_to"
                                android:textAppearance="@style/CardTitleTextStyle"
                                android:textColor="@color/black" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/flight_permute"
                    android:layout_width="@dimen/lg"
                    android:layout_height="@dimen/lg"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/lgText"
                    android:src="@drawable/yellow_permute_icon" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/md"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/flight_date_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/md"
                    android:background="@drawable/btn_grey_f4"
                    android:orientation="horizontal"
                    android:padding="@dimen/md">

                    <TextView
                        android:id="@+id/flight_date_departure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".48"
                        android:text="@string/home_departure_date"
                        android:textAppearance="@style/MetaInfoTextStyle" />

                    <LinearLayout
                        android:id="@+id/flight_date_arrival_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha=".48"
                            android:text=" - "
                            android:textAppearance="@style/MetaInfoTextStyle" />

                        <TextView
                            android:id="@+id/flight_date_arrival"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha=".48"
                            android:text="@string/home_arrival_date"
                            android:textAppearance="@style/MetaInfoTextStyle" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/flight_class_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/md"
                    android:layout_weight="1"
                    android:background="@drawable/btn_grey_f4"
                    android:orientation="horizontal"
                    android:padding="@dimen/md">

                    <TextView
                        android:id="@+id/flight_nb_pers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".48"
                        android:text="@string/home_nb_passengers"
                        android:textAppearance="@style/MetaInfoTextStyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".48"
                        android:text=", "
                        android:textAppearance="@style/MetaInfoTextStyle" />

                    <TextView
                        android:id="@+id/flight_class_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".48"
                        android:text="@string/home_class"
                        android:textAppearance="@style/MetaInfoTextStyle" />
                </LinearLayout>

                <TextView
                    android:id="@+id/home_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/md"
                    android:background="@drawable/btn_primary"
                    android:paddingHorizontal="22sp"
                    android:paddingVertical="@dimen/md"
                    android:layout_weight="1"
                    android:text="@string/home_search_btn"
                    android:textAppearance="@style/MetaInfoBtnTextStyle" />

            </LinearLayout>
        </LinearLayout>

        <!-- Good Deals Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/md"
            android:text="@string/home_good_deals"
            android:textAppearance="@style/BlackTitleTextStyle" />

        <!-- List Of Good Deals -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_good_deals_cards"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardHeight"
            android:layout_marginVertical="@dimen/md"
            android:layout_marginRight="@dimen/md"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


    </LinearLayout>

</ScrollView>
</RelativeLayout>