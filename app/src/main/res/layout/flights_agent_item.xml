<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payment_methods"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginBottom="@dimen/md"
    android:padding="@dimen/md"
    android:layout_marginHorizontal="@dimen/md"
    android:background="@color/light_grey_ED"
    android:layout_below="@id/flight_price"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/md">

    <!-- Icons for each payment method -->
    <!-- Replace with actual drawable resources -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/agent_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/mastercard_logo" />

        <TextView
            android:id="@+id/agent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/sm"
            android:text="AIRFRANCE"
            android:textAppearance="@style/MetaInfoTextStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:gravity="center"
                android:text="Type: "
                android:textAppearance="@style/MetaInfoTextStyle"
                android:textSize="@dimen/md" />

            <TextView
                android:id="@+id/agent_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Agence de voyage"
                android:textAppearance="@style/MetaInfoTextStyle"
                android:textColor="@color/green"
                android:textSize="@dimen/md" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sm"
                android:textColor="@color/light_blue"
                android:gravity="center"
                android:text="Avis: "
                android:textAppearance="@style/MetaInfoTextStyle"
                android:textSize="@dimen/md" />

            <TextView
                android:id="@+id/agent_reviewers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sm"
                android:gravity="center"
                android:text="2000"
                android:textAppearance="@style/MetaInfoTextStyle"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/md" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sm"
                android:gravity="center"
                android:layout_marginLeft="@dimen/sm"
                android:text="Note: "
                android:textAppearance="@style/MetaInfoTextStyle"
                android:textColor="@color/yellow"
                android:textSize="@dimen/md" />

            <TextView
                android:id="@+id/agent_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sm"
                android:gravity="center"
                android:text="3"
                android:textAppearance="@style/MetaInfoTextStyle"
                android:textColor="@color/yellow"
                android:textSize="@dimen/md" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sm"
                android:gravity="center"
                android:text="/5"
                android:textAppearance="@style/MetaInfoTextStyle"
                android:textColor="@color/yellow"
                android:textSize="@dimen/md" />
        </LinearLayout>



        <Button
            android:id="@+id/site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:text="Visiter"
            android:textAppearance="@style/MetaInfoTextStyle"/>

    </LinearLayout>


</LinearLayout>
